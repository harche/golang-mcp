{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "mcp",
    "types": ["node"]
  },
  "include": [
    "mcp/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs"
  ]
}
